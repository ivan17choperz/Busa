<%- include("templates/header") %>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m12 l6">
                <h3 class="uppercase">Contactanos.</h3>
                <p class="light">Rellena el formulario y nos pondremos en conctacto con tigo lo mas rapido posible.</p>
                <img src="../assets/imgs/img of claim/1.jpg" alt="call center" class="responsive-img">
            </div>
            <!-- FORM -->
            <div class="col s12 m12 l6">
                <form>
                    <div class="container">
                        <div class="section">
                            <div class="row">
                                <!-- TIPO -->
                                <div class="col s12 m12 l12  input-field">
                                    <select>
                                        <option value="" disabled class="uppercase">Seleccione el tipo</option>
                                        <option value="queja" class="uppercase">QUEJA</option>
                                        <option value="reclamo" class="uppercase">RECLAMO</option>
                                        <option value="agradecimiento" class="uppercase">AGRADECIMIENTOS</option>
                                    </select>
                                    <label class="uppercase">Tipo</label>
                                </div>
                                <!-- NAME -->
                                <div class="col s12 m12 l6  input-field">
                                    <label for="name" class="uppercase">Nombres</label>
                                    <input type="text" id="name">
                                </div>
                                <!-- LAST NAME -->
                                <div class="col s12 m12 l6  input-field">
                                    <label for="last-name" class="uppercase">Apellidos</label>
                                    <input type="text" id="last-name">
                                </div>
                                <!-- ID -->
                                <div class="col s12 m12 l12  input-field">
                                    <label for="id" class="uppercase">Identicacion</label>
                                    <input type="text" id="id">
                                </div>
                                <!-- PHONE -->
                                <div class="col s12 m12 l6  input-field">
                                    <label for="phone" class="uppercase">telefono</label>
                                    <input type="text" id="phone">
                                </div>
                                <!-- EMAIL -->
                                <div class="col s12 m12 l6  input-field">
                                    <label for="email" class="uppercase">CORREO</label>
                                    <input type="email" id="email" class="validate">
                                    <span class="helper-text" data-error="Invalido" data-seccess="Ok"></span>
                                </div>
                                <!-- ADDRESS -->
                                <div class="col s12  m12 l12 input-field">
                                    <label for="address" class="uppercase">Direccion</label>
                                    <input type="text" id="address">
                                </div>
                                <!-- CLAIM -->
                                <div class="col s12  m12 l12 input-field">
                                    <label for="claim" class="uppercase">Decripcion de la peticion</label>
                                    <textarea name="" id="claim" class="materialize-textarea" cols="30"
                                        rows="10"></textarea>
                                </div>
                                <!-- SUBMIT -->
                                <div class="col s12 m12 l12">
                                    <button type="submit" class="uppercase btn col s12 m12 l12">enviar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
<%- include("templates/footer") %> 